package bindings;

import java.util.Map
import java.util.HashMap;
import com.github.codgen.core.drools.fact.BindingsFact
import java.util.List;


/**
 * 默认绑定
 */
rule bindings_default
    agenda-group "bindings" // 议程分组
    no-loop true            // 防止死循环(当规则通过update之类的函数修改了Fact对象时，可能使当前规则再次被激活从而导致死循环)
    lock-on-active true     // 限制当前规则只会被执行一次(包括当前规则的重复执行不是本身触发的)
    salience -1             // 执行的优先级(值越大优先级越高，可以为负数，不设置默认为0)
when
    $bindingsFact: BindingsFact()
then
    @SuppressWarnings("unchecked")
    List<String> defaultBindings = ( List<String>) $bindingsFact.getBindingsOptionsMap().get("default");
    for (String binding : defaultBindings) {
        // 获取要绑定的变量
        Object variable = $bindingsFact.getVariableMap().get(binding);
        // 绑定变量
        $bindingsFact.getPathTemplate().binding(binding, variable);
        $bindingsFact.getContentTemplate().binding(binding, variable);
    }
    update($bindingsFact);
end